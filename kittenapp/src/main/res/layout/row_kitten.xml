<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/kitten_image"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kitten_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/kitten_num_template"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_black"
                android:scrollHorizontally="true"
                android:ellipsize="start"
                android:singleLine="true" />
            <TextView
                android:id="@+id/kitten_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kitten_name_template"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_italic"
                android:lines="1"
                android:ellipsize="end"
                android:scrollHorizontally="true"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>